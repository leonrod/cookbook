# Ambiente (development, production, testing)
FLASK_ENV=development

# Segurança (OBRIGATÓRIO em produção - gere com: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here

# Banco de Dados
DB_PATH=nurglingdatabase.db

# API
API_RESULTS_LIMIT=50
API_MAX_QUERY_LENGTH=500

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS (apenas se necessário para acesso cross-origin)
CORS_ENABLED=False
CORS_ORIGINS=*

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per minute

# Cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Servidor (para produção)
PORT=5000
WORKERS=4
